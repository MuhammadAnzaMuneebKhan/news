<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Blog Id</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
        <div class="container">
            <div>
                <h1>
                    <%= blog.title %>
                </h1>
                <img src="<%= blog.coverImageURL %>" alt="....." width="700px">
                <pre><%= blog.body %></pre>
            </div>
        </div>
        <div class="container">
            <img src="<%= blog.createdBy.profileImgUrl %>" alt="" width="100px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container">
            <h1>comment (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div>
                        <input type="text" name="content" class="form-control" name="content"
                            placeholder="enter comment">
                        <button type="submit">Add Comment</button>

                    </div>
                </form>
                <% } %>
                    <div>
                        <% comments.forEach(e=> { %>
                            <div>
                                <img src="<%= e.createdBy.profileImgUrl %>" alt="" width="100px">
                                <%= e.createdBy.fullName %>:
                                    <pre><%= e.content %></pre>
                            </div>
                            <% }) %>
                    </div>

        </div>
        <%- include("./partials/scripts.ejs") %>
</body>

</html>