<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Home</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
        <% blogs.forEach(e=> { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= e.coverImageURL %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= e.title %>
                    </h5>
                    <a href="/blog/<%= e._id %>" class="btn btn-primary">View</a>
                </div>
            </div>
            <% }) %>
                <%- include("./partials/scripts.ejs") %>
</body>

</html>